<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mygame.stalker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rad_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/rad_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ShopActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".StatisticActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".GameWindowActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".AuthorInformationActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".MainMenuActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>